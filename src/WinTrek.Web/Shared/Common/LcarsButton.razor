@* LCARS styled button component *@

<button class="@CssClass" @onclick="OnClick" disabled="@Disabled">
    @ChildContent
</button>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public ButtonStyle Style { get; set; } = ButtonStyle.Primary;

    private string CssClass => Style switch
    {
        ButtonStyle.Primary => "lcars-btn",
        ButtonStyle.Secondary => "lcars-btn lcars-btn-secondary",
        ButtonStyle.Alert => "lcars-btn lcars-btn-alert",
        ButtonStyle.Purple => "lcars-btn lcars-btn-purple",
        _ => "lcars-btn"
    };

    public enum ButtonStyle
    {
        Primary,
        Secondary,
        Alert,
        Purple
    }
}
