<Window x:Class="WinTrek.UI.Views.GalacticRecordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Galactic Record" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a2e">

    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#16213e"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#0f3460"/>
        <SolidColorBrush x:Key="TextColor" Color="#e8e8e8"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Galactic Record - Computer Memory Banks"
                   FontSize="16" FontWeight="Bold"
                   Foreground="{StaticResource TextColor}"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- 8x8 Galactic Grid -->
        <Border Grid.Row="1" Background="{StaticResource PanelBackground}"
                BorderBrush="{StaticResource PanelBorder}" BorderThickness="2" Padding="5">
            <ItemsControl x:Name="GalaxyGrid">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="8" Columns="8"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{StaticResource PanelBorder}" BorderThickness="1"
                                Background="{Binding BackgroundColor}" Margin="1" Padding="2">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="{Binding DisplayCode}"
                                           FontFamily="Consolas"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"
                                           Foreground="{Binding CodeColor}"/>
                                <TextBlock Text="{Binding Coordinates}"
                                           FontFamily="Consolas"
                                           FontSize="8"
                                           HorizontalAlignment="Center"
                                           Foreground="Gray"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Legend and Close -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Format: [Klingons][Starbases][Stars] | ??? = Unexplored"
                       FontSize="10" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                <TextBlock Text="* = Current Quadrant" FontSize="10" Foreground="Cyan" Margin="0,0,15,0"/>
                <TextBlock Text="Red = Klingons" FontSize="10" Foreground="Red" Margin="0,0,15,0"/>
                <TextBlock Text="Green = Starbase" FontSize="10" Foreground="LimeGreen"/>
            </StackPanel>
            <Button Content="Close" Width="80" Margin="0,5,0,0"
                    HorizontalAlignment="Center" Click="CloseButton_Click"
                    Background="{StaticResource PanelBorder}" Foreground="{StaticResource TextColor}"/>
        </StackPanel>
    </Grid>
</Window>
