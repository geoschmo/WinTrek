<Window x:Class="WinTrek.UI.Views.StatusReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Status Report" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#1a1a2e">

    <Window.Resources>
        <SolidColorBrush x:Key="PanelBackground" Color="#16213e"/>
        <SolidColorBrush x:Key="PanelBorder" Color="#0f3460"/>
        <SolidColorBrush x:Key="TextColor" Color="#e8e8e8"/>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Enterprise System Status Report"
                   FontSize="16" FontWeight="Bold"
                   Foreground="{StaticResource TextColor}"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Systems List -->
        <Border Grid.Row="1" Background="{StaticResource PanelBackground}"
                BorderBrush="{StaticResource PanelBorder}" BorderThickness="2" Padding="10">
            <ItemsControl x:Name="SystemsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="0,3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="{Binding Name}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{Binding StatusColor}"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1" Text="{Binding StatusText}"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="{Binding StatusColor}"
                                       Margin="10,0"
                                       VerticalAlignment="Center"/>

                            <ProgressBar Grid.Column="2"
                                         Value="{Binding HealthPercent}"
                                         Maximum="100"
                                         Height="12"
                                         Background="#0a0a15"
                                         Foreground="{Binding StatusColor}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock x:Name="DamageSummary"
                       FontSize="11" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <Button Content="Close" Width="80" Margin="0,5,0,0"
                    HorizontalAlignment="Center" Click="CloseButton_Click"
                    Background="{StaticResource PanelBorder}" Foreground="{StaticResource TextColor}"/>
        </StackPanel>
    </Grid>
</Window>
