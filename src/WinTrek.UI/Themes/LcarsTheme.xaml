<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- LCARS Color Palette -->
    <Color x:Key="LcarsBackground">#000000</Color>
    <Color x:Key="LcarsPanelBackground">#101020</Color>
    <Color x:Key="LcarsOrange">#FF9900</Color>
    <Color x:Key="LcarsBeige">#FFCC99</Color>
    <Color x:Key="LcarsPurple">#CC99CC</Color>
    <Color x:Key="LcarsBlue">#9999FF</Color>
    <Color x:Key="LcarsTeal">#99CCFF</Color>
    <Color x:Key="LcarsRed">#CC6666</Color>
    <Color x:Key="LcarsYellow">#FFFF66</Color>
    <Color x:Key="LcarsGreen">#99FF99</Color>
    <Color x:Key="LcarsText">#FF9900</Color>
    <Color x:Key="LcarsTextLight">#FFCC99</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="LcarsBackgroundBrush" Color="{StaticResource LcarsBackground}"/>
    <SolidColorBrush x:Key="LcarsPanelBackgroundBrush" Color="{StaticResource LcarsPanelBackground}"/>
    <SolidColorBrush x:Key="LcarsOrangeBrush" Color="{StaticResource LcarsOrange}"/>
    <SolidColorBrush x:Key="LcarsBeigeBrush" Color="{StaticResource LcarsBeige}"/>
    <SolidColorBrush x:Key="LcarsPurpleBrush" Color="{StaticResource LcarsPurple}"/>
    <SolidColorBrush x:Key="LcarsBlueBrush" Color="{StaticResource LcarsBlue}"/>
    <SolidColorBrush x:Key="LcarsTealBrush" Color="{StaticResource LcarsTeal}"/>
    <SolidColorBrush x:Key="LcarsRedBrush" Color="{StaticResource LcarsRed}"/>
    <SolidColorBrush x:Key="LcarsYellowBrush" Color="{StaticResource LcarsYellow}"/>
    <SolidColorBrush x:Key="LcarsGreenBrush" Color="{StaticResource LcarsGreen}"/>
    <SolidColorBrush x:Key="LcarsTextBrush" Color="{StaticResource LcarsText}"/>
    <SolidColorBrush x:Key="LcarsTextLightBrush" Color="{StaticResource LcarsTextLight}"/>

    <!-- LCARS Button Style -->
    <Style x:Key="LcarsButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource LcarsOrangeBrush}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontFamily" Value="Arial Black"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="15,8"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="0,15,15,0"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsBeigeBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsPurpleBrush}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="border" Property="Background" Value="#666666"/>
                            <Setter Property="Foreground" Value="#999999"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- LCARS Secondary Button (Beige) -->
    <Style x:Key="LcarsButtonSecondary" TargetType="Button" BasedOn="{StaticResource LcarsButton}">
        <Setter Property="Background" Value="{StaticResource LcarsBeigeBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="15,0,0,15"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsOrangeBrush}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource LcarsPurpleBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- LCARS Alert Button (Red) -->
    <Style x:Key="LcarsButtonAlert" TargetType="Button" BasedOn="{StaticResource LcarsButton}">
        <Setter Property="Background" Value="{StaticResource LcarsRedBrush}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- LCARS TextBox Style -->
    <Style x:Key="LcarsTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="#1a1a2e"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsOrangeBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LcarsOrangeBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,2"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5,3"/>
        <Setter Property="Margin" Value="2"/>
        <Setter Property="CaretBrush" Value="{StaticResource LcarsOrangeBrush}"/>
    </Style>

    <!-- LCARS Label Style -->
    <Style x:Key="LcarsLabel" TargetType="Label">
        <Setter Property="Foreground" Value="{StaticResource LcarsTextLightBrush}"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- LCARS TextBlock Style -->
    <Style x:Key="LcarsTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource LcarsTextBrush}"/>
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- LCARS Header Style -->
    <Style x:Key="LcarsHeader" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource LcarsPurpleBrush}"/>
        <Setter Property="FontFamily" Value="Arial Black"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- LCARS GroupBox Style -->
    <Style x:Key="LcarsGroupBox" TargetType="GroupBox">
        <Setter Property="Foreground" Value="{StaticResource LcarsTextLightBrush}"/>
        <Setter Property="FontFamily" Value="Arial Black"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="3"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header bar -->
                        <Border Grid.Row="0"
                                Background="{StaticResource LcarsPurpleBrush}"
                                CornerRadius="10,10,0,0"
                                Padding="10,3">
                            <ContentPresenter ContentSource="Header"
                                              TextBlock.Foreground="Black"
                                              TextBlock.FontWeight="Bold"/>
                        </Border>

                        <!-- Content area -->
                        <Border Grid.Row="1"
                                Background="{StaticResource LcarsPanelBackgroundBrush}"
                                BorderBrush="{StaticResource LcarsPurpleBrush}"
                                BorderThickness="2,0,2,2"
                                CornerRadius="0,0,10,10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- LCARS ListBox Style -->
    <Style x:Key="LcarsListBox" TargetType="ListBox">
        <Setter Property="Background" Value="#0a0a15"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsTextBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource LcarsOrangeBrush}"/>
        <Setter Property="BorderThickness" Value="0,2,0,0"/>
        <Setter Property="FontFamily" Value="Consolas"/>
    </Style>

    <!-- LCARS Menu Style -->
    <Style x:Key="LcarsMenu" TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource LcarsPanelBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsTextBrush}"/>
        <Setter Property="FontFamily" Value="Arial"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <!-- LCARS ProgressBar Style -->
    <Style x:Key="LcarsProgressBar" TargetType="ProgressBar">
        <Setter Property="Background" Value="#1a1a2e"/>
        <Setter Property="Foreground" Value="{StaticResource LcarsOrangeBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Height" Value="8"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ProgressBar">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"/>
                        <Border x:Name="PART_Track"/>
                        <Border x:Name="PART_Indicator"
                                Background="{TemplateBinding Foreground}"
                                CornerRadius="4"
                                HorizontalAlignment="Left"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
